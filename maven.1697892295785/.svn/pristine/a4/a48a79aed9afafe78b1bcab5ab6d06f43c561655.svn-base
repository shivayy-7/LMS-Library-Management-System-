            }
            <c:if test="${!status.last}">,</c:if>
        </c:forEach>
    ];

    for (let i = 0; i < bookData.length; i++) {
        getShelfByRackId(bookData[i].rackId, 'shelf['+i+']', bookData[i].shelfId);
    }
});



</script>

    
